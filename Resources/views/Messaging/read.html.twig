{% extends 'DufAdminBundle:Default:index.html.twig' %}

{% block main %}
	<div class="row">
		<div class="col-xs-12">
			<div class="box">
				<div class="box-header">
					<h3 class="box-title">{{ conversation.subject }}</h3>
				</div>

				<div class="box-body">
					{{ render(controller('DufAdminBundle:Messaging:renderMessagingLeftMenu', { current: null })) }}

					<div class="col-md-9">
						<div class="box box-primary">
							<div class="box-header with-border">
								<h3 class="box-title">{{ conversation.subject }}</h3>

								<div class="box-tools pull-right">
									<a href="#" class="btn btn-box-tool" data-toggle="tooltip" title="Previous"><i class="fa fa-chevron-left"></i></a>
									<a href="#" class="btn btn-box-tool" data-toggle="tooltip" title="Next"><i class="fa fa-chevron-right"></i></a>
								</div>
							</div>

							<div id="messages-list-container">
								{% for message in conversation.messages %}
									{% include 'DufAdminBundle:Messaging:message.html.twig' %}
								{% endfor %}
							</div>

							<div class="box-body no-padding reply-box" id="reply_form_container"></div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}