{% extends 'DufAdminBundle:Default:index.html.twig' %}

{% block main %}
	<form action="{{ path('duf_admin_redmine_save_issue') }}" name="duf_admin_create_issue" method="post" enctype="multipart/form-data">
		<div class="row">
			<div class="col-xs-12">
				<div class="box">
					<div class="box-header">
						<h3 class="box-title">Create issue</h3>

						<div class="pull-right box-tools">
							<a href="{{ path('duf_admin_redmine_index') }}">
								<p class="btn btn-default">Back</p>
							</a>
						</div>
					</div>

					<div class="box-body">
						<br />
					</div>
				</div>
			</div>

			<div class="col-md-6">
				<div class="box box-solid">
					<div class="box-body">
						{{ form_widget(form.tracker) }}
						{{ form_widget(form.subject) }}
						{{ form_widget(form.parent_task) }}
					</div>
				</div>
			</div>

			<div class="col-md-6">
				<div class="box box-solid">
					<div class="box-body">
						{{ form_widget(form.status) }}
						{{ form_widget(form.priority) }}
						{{ form_widget(form.assignee) }}
					</div>
				</div>
			</div>

			<div class="col-xs-12">
				<div class="box box-solid">
					<div class="box-body">
						{{ form_widget(form.description) }}
					</div>
				</div>
			</div>

			<div class="col-xs-12">
				<div class="box box-solid">
					<div class="box-body">
						<label>Files</label>
						{{ form_widget(form.files) }}

						{{ form_widget(form.private) }}

						{{ form_row(form._token) }}

						<input type="submit" value="Create Issue" class="btn btn-primary">
					</div>
				</div>
			</div>
		</div>
	</form>
{% endblock %}

{% block additional_js %}
	<script>
		$(function () {
			$('textarea').each(function() {
				CKEDITOR.replace('editor1');
			});

			$('.duf-admin-date').each(function() {
				$(this).datepicker({
					autoclose: true,
					format: 'd-m-Y',
				});
			});

			$('.duf-admin-datetime').each(function() {
            	$(this).datetimepicker({
            		format: 'd/m/Y H:i',
            	});
			});
		});
	</script>

	<script type="text/javascript">
		$(document).ready(function() {
            // set bootstrap switches
            $('input[type="checkbox"]').bootstrapSwitch({
            	onText: 'Yes',
            	offText: 'No',
            });

            // select2
            $('.select2').select2();
		});
	</script>
{% endblock %}